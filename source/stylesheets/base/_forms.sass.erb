#{$all-text-inputs}
  @include transition(padding .25s ease)
  background: $white
  border: none
  color: lighten($black, 60%)
  font-family: $b-font-family-book
  font-size: $b-font-size-large
  line-height: $b-line-height-text-input
  margin-top: 2px
  min-width: rem($b-text-input-min-width)
  padding: ($b-space + $b-space-xs) $b-space

  @include placeholder
    @include transition(opacity .25s ease)
    line-height: initial

  &:focus,
  &.is-dirty
    padding-bottom: ($b-space - $b-space-xs)
    padding-top: ($b-space-l - $b-space-xs)

    @include placeholder
      opacity: 0

  &:focus
    color: $marine
    outline: none

  // Input label (adjacent)
  + label
    @include transition(top .25s ease, opacity .25s ease)
    background: $white
    color: lighten($black, 90%)
    height: ($b-space-l - $b-space-xs)
    left: 0
    line-height: $b-line-height-input-label
    width: rem($b-text-input-min-width)
    opacity: 0
    padding-left: $b-space
    pointer-events: none
    top: rem(15)

  &:focus + label,
  &.is-dirty + label
    opacity: 1
    top: 2px

  &:focus + label
    color: $marine

  // Input validation
  &:focus ~ .b-input-error
    @include transform(translateY(100%))
    opacity: 0

// Textarea
textarea
  line-height: $b-line-height-text-area
  min-height: rem($b-text-area-min-height)

// Submit (as button)
input[type="submit"]
  @extend .b-font-family-bold
  @extend .b-letter-spacing-button
  @extend .ttu

// Input Wrappers
.b-input
  overflow: hidden

  &.has-controls
    input
      padding-right: rem(90)

      &[type="password"] ~ .b-input-control.is-masking
        svg.is-active
          display: none

      &[type="text"] ~ .b-input-control.is-masking
        svg.is-inactive
          display: none

// Input controls
.b-input-control
  @include transform(translateY(-50%))
  cursor: pointer
  height: rem($b-text-input-control-height)
  right: $b-space
  top: 50%
  width: rem($b-text-input-control-width)

  svg
    height: 100%
    width: 100%

// Input validation
.b-input-error
  @include transition(transform .25s ease, opacity .15s ease)
  @include transform(translateY(100%))
  bottom: 0
  color: $azalea
  left: 0
  opacity: 0
  padding-left: $b-space
  pointer-events: none
  width: rem($b-text-input-min-width)

  .b-input.has-errors &
    @include transform(translateY(0))
    opacity: 1