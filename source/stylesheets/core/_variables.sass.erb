// Z-Index Strata
$stratum-bottom:     -1
$stratum-base:        0
$stratum-lowest:     10
$stratum-lower:      50
$stratum-low:       100
$stratum-medium:    200
$stratum-high:      500
$stratum-higher:   1000
$stratum-highest:  5000
$stratum-top:     10000

// Color Palette
<% design_token("color").each do |prop| %>
$<%= prop.name %>: <%= prop.value %>
<% end %>

// Border
$b-border-radius: 4px !default

// Sizing
$b-space:     rem(20px) !default
$b-space-xs:  $b-space * 0.25 !default
$b-space-s:   $b-space * 0.5 !default
$b-space-l:   $b-space * 2 !default
$b-space-xl:  $b-space * 4 !default

// Typography
/// Font Families
<% design_token("typography", category: "font-family").each do |prop| %>
$b-<%= prop.name %>: <%= prop.value %>, sans-serif !default
<% end %>

/// Type Sizing
<% design_token("typography", category: "font-size").each do |prop| %>
$b-<%= prop.name %>: rem(<%= prop.value %>)
<% end %>

/// Line Height
<% design_token("typography", category: "line-height").each do |prop| %>
$b-<%= prop.name %>: <%= prop.value %>
<% end %>

/// Letter Spacing
<% design_token("typography", category: "letter-spacing").each do |prop| %>
$b-<%= prop.name %>: rem(<%= prop.value %>)
<% end %>

/// Headings
<% design_token("typography", category: "heading").each do |prop| %>
$<%= prop.name %>: <%= prop.value %>px
<% end %>

// Forms
/// One-line input padding
<% design_token("forms", category: "padding").each do |prop| %>
$b-<%= prop.name %>: <%= prop.value %>
<% end %>

/// Input width
<% design_token("forms", category: "width").each do |prop| %>
$b-<%= prop.name %>: <%= prop.value %>
<% end %>

/// Input height
<% design_token("forms", category: "height").each do |prop| %>
$b-<%= prop.name %>: <%= prop.value %>
<% end %>