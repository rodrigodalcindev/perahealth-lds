// Z-Index Strata
$stratum-bottom:     -1
$stratum-base:        0
$stratum-lowest:     10
$stratum-lower:      50
$stratum-low:       100
$stratum-medium:    200
$stratum-high:      500
$stratum-higher:   1000
$stratum-highest:  5000
$stratum-top:     10000

// Color Palette
<% design_token("color").each do |prop| %>
$b-color-<%= prop.name %>: <%= prop.value %>
<% end %>

// Border
$b-border-radius: 4px !default

// Sizing
<% design_token("spacing", category: "space").each do |prop| %>
$b-<%= prop.name %>: rem(<%= prop.value %>)
<% end %>

// Grid Variables
<% design_token("grid").each do |prop| %>
<% if prop.name == "grid-columns" %>
$<%= prop.name %>: <%= prop.value %>
<% else %>
$<%= prop.name %>: rem(<%= prop.value %>)
<% end %>
<% end %>

// Typography
/// Font Families
<% design_token("typography", category: "font-family").each do |prop| %>
$b-<%= prop.name %>: <%= prop.value %>, sans-serif !default
<% end %>

/// Font Weight
<% design_token("typography", category: "font-weight").each do |prop| %>
$b-<%= prop.name %>: <%= prop.value %>
<% end %>

/// Type Sizing
<% design_token("typography", category: "font-size").each do |prop| %>
$b-<%= prop.name %>: rem(<%= prop.value %>)
<% end %>

// Buttons
/// Background color
<% design_token("buttons", category: "background-color").each do |prop| %>
$b-<%= prop.name %>: $b-color-<%= prop.value %>
<% end %>

/// Text color
<% design_token("buttons", category: "text-color").each do |prop| %>
$b-<%= prop.name %>: $b-color-<%= prop.value %>
<% end %>

/// Button width
<% design_token("buttons", category: "width").each do |prop| %>
$b-<%= prop.name %>: rem(<%= prop.value %>)
<% end %>

/// Line Height
<% design_token("typography", category: "line-height").each do |prop| %>
$b-<%= prop.name %>: <%= prop.value %>
<% end %>

/// Letter Spacing
<% design_token("typography", category: "letter-spacing").each do |prop| %>
$b-<%= prop.name %>: rem(<%= prop.value %>)
<% end %>

/// Headings
<% design_token("typography", category: "heading-size").each do |prop| %>
$b-<%= prop.name %>: rem(<%= prop.value %>)
<% end %>

/// Forms
<% design_token("forms").each do |prop| %>
$b-<%= prop.name %>: rem(<%= prop.value %>)
<% end %>

/// Cards
<% design_token("card").each do |prop| %>
<% next if prop.category == "card-columns" || prop.category == "card-type" %>
$b-<%= prop.name %>: rem(<%= prop.value %>)
<% end %>