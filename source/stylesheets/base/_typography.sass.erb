// Font Face
<% data.design_tokens.typography.props.each_with_index do |prop, index| %>
<% next unless prop[1].category == "font-family" %>
@font-face
  font-family: '<%= prop[1].value %>'
  src: asset-url('<%= prop[1].value %>.ttf',font)
<% end %>

body
  +font-feature-settings("kern", "liga", "pnum")
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  font-family: $b-font-family-medium
  font-size: $b-font-size-medium
  line-height: $b-line-height-default

h1, h2, h3, h4, h5, h6, p
  margin: 0

p
  font-family: $b-font-family-medium

small
  font-size: $b-font-size-small

// Font Families
<% data.design_tokens.typography.props.each_with_index do |prop, index| %>
<% next unless prop[1].category == "font-family" %>
.b-<%= prop[1].name %>
  font-family: $b-<%= prop[1].name %>
<% end %>

// Headings
<% data.design_tokens.typography.props.each_with_index do |prop, index| %>
<% next unless prop[1].category == "heading" %>
h<%= index + 1 %>, .h<%= index + 1 %>
  font-family: $b-font-family-bold
  font-size: $<%= prop[1].name %>
  line-height: $b-line-height-heading
<% end %>

// Type Sizing
<% data.design_tokens.typography.props.each_with_index do |prop, index| %>
<% next unless prop[1].category == "font-size" %>
.b-<%= prop[1].name %>
  font-size: $b-<%= prop[1].name %>
<% end %>

// Letter Spacing
<% data.design_tokens.typography.props.each_with_index do |prop, index| %>
<% next unless prop[1].category == "letter-spacing" %>
.b-<%= prop[1].name %>
  letter-spacing: $b-<%= prop[1].name %>
<% end %>