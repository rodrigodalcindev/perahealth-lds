#{$all-text-inputs}
  @include transition(padding .25s ease)
  background: $b-color-white
  border: none
  color: lighten($b-color-violet-slate, 3.5%)
  font-weight: $b-font-weight-book
  font-size: $b-font-size-input
  line-height: $b-line-height-text-input
  margin-top: rem(2)
  min-width: $b-text-input-min-width
  padding: $b-space

  @include placeholder
    @include transition(opacity .25s ease)
    line-height: initial

  &:focus,
  &.is-dirty
    padding-bottom: ($b-space - $b-space-xs)
    padding-top: ($b-space + $b-space-xs)

    @include placeholder
      opacity: 0

  &:focus
    color: $b-color-blue
    outline: none

  // Input label (adjacent)
  + label
    @include transition(top .25s ease, opacity .25s ease)
    background: $b-color-white
    color: lighten($b-color-black, 90%)
    height: ($b-space + $b-space-xs)
    left: 0
    line-height: $b-line-height-input-label
    min-width: $b-text-input-min-width
    opacity: 0
    padding-left: $b-space
    pointer-events: none
    top: ($b-space-s + $b-space-xs)

  &:focus + label,
  &.is-dirty + label
    opacity: 1
    top: rem(2)

  &:focus + label
    color: $b-color-blue

  // Input validation
  &:focus ~ .b-input-error
    @include transform(translateY(100%))
    opacity: 0

// Textarea
textarea
  line-height: $b-line-height-text-area
  min-height: $b-text-area-min-height
  width: 100%

// Submit (as button)
input[type="submit"]
  font-weight: $b-font-weight-medium
  letter-spacing: $b-letter-spacing-label

// Input Wrappers
.b-input
  overflow: hidden

// Input validation
.b-input-error
  @include transition(transform .25s ease, opacity .15s ease)
  @include transform(translateY(100%))
  bottom: 0
  color: $b-color-purple
  left: 0
  opacity: 0
  padding-left: $b-space
  pointer-events: none
  min-width: $b-text-input-min-width

  .b-input.has-errors &
    @include transform(translateY(0))
    opacity: 1