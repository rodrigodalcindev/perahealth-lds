.b-tooltip
  background: $white
  color: $asphalt

  .b-tooltip-heading
    color: $ink

  &:before
    position: absolute
    right: 0

  <% design_token("tooltips", category: "tooltip-style").each do |prop| %>
  &.is-<%= prop.value %>
    border-radius: $b-<%= prop.value %>-tooltip-border-radius
    max-width: $b-<%= prop.value %>-tooltip-max-width

    &:before
      @include rounded-triangle($b-<%= prop.value %>-tooltip-caret-size, $b-<%= prop.value %>-tooltip-border-radius, $white)
      margin: 0 $b-<%= prop.value %>-tooltip-caret-distance*1.5
      top: ($b-<%= prop.value %>-tooltip-caret-size/2)*-1
  <% end %>

  <% design_token("color", category: "main-color").each do |prop| %>
  <% next if prop.name == "black" || prop.name == "white" || prop.name == "powder" %>
  &.is-<%= prop.name %>
    background: lighten($<%= prop.name %>, 45%)

    .b-tooltip-heading
      color: $<%= prop.name %>

    &:before
      background: lighten($<%= prop.name %>, 45%)
  <% end %>