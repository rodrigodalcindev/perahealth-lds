#{$all-button-inputs}, .is-button
  @include transition(background .25s ease)
  border: none
  border-radius: $b-default-button-border-radius
  cursor: pointer
  line-height: $b-line-height-default-button
  min-width: $b-default-button-width
  padding: ($b-space + $b-space-xs) 0
  text-align: center
  text-decoration: none

  <% design_token("buttons", category: "button-style").each do |prop| %>
  &.is-<%= prop.value %>
    background: $b-<%= prop.value %>-button-background-color
    color: $b-<%= prop.value %>-button-text-color

    &:hover
      background: darken($b-<%= prop.value %>-button-background-color, 5%)
  <% end %>

  &.has-icon
    padding: ($b-space + $b-space-xs) 0 ($b-space + $b-space-xs) ($b-space*3)
    text-align: left

    i
      @include transform(translate(-50%, -50%))
      left: $b-space*3/2
      top: 50%

  // Overrides
  &.is-small
    min-width: $b-small-button-width

    &.has-icon
      padding-left: $b-space-s*5

      i
        left: $b-space-s*5/2

  &.is-instagram
    @include linear-gradient(to right, $instagram-blue, $instagram-pink)

    &:hover
      @include linear-gradient(to right, darken($instagram-blue, 5%), darken($instagram-pink, 5%))