// Spacing Swatches

<% design_token("spacing").each do |prop| %>

.b-block
  background: $marine

.b-block--<%= prop.name %>
  @include display(flex)
  @include align-items(center)
  border-radius: $b-border-radius
  padding-left: $b-<%= prop.name %>
  height: 50px
  &:before
    background: $spring
    content: ''
    display: block
    height: 50px
    position: fixed
    width: 100%
    z-index: 0

.b-block-container
  z-index: 1

<% end %>
