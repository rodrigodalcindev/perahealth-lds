.b-icon
  @include display(flex)
  @include align-items(center)
  @include justify-content(center)
  @include flex-direction(column)
  background: $b-color-white
  border: 1px solid rgba($b-color-asphalt,.15)
  border-radius: $b-border-radius
  height: 200px
  width: 200px

  svg
    width: 100px

    path
      fill: inherit