// Color Swatches
.b-swatch
  @include display(flex)
  @include align-items(center)
  @include justify-content(center)
  border: 1px solid rgba($b-color-asphalt,.15)
  border-radius: rem(3)
  height: 100px
  width: 150px

<% design_token("color").each do |prop| %>
.b-swatch--<%= prop.name %>
  background: $b-color-<%= prop.name %>
  color: color-contrast($b-color-<%= prop.name %>)
<% end %>
