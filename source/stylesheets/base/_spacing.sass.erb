// Spacing

.b-space
  background: $b-color-marine
  border-radius: $b-border-radius
  height: 50px
  width: 100%

<% design_token("spacing").each do |prop| %>

.b-space-container--<%= prop.name %>
  @include display(flex)
  @include align-items(center)
  background: $b-color-spring
  border-radius: 0 $b-border-radius $b-border-radius 0
  height: 100%
  padding-left: calc(150px - #{$b-<%= prop.name %>})
  width: 100%

.b-space--<%= prop.name %>
  padding-left: $b-<%= prop.name %>

<% end %>
