// Color Swatches
.b-swatch
  @include display(flex)
  @include align-items(center)
  @include justify-content(center)
  border: 1px solid rgba($asphalt,.15)
  border-radius: $b-border-radius
  height: 100px
  width: 150px

<% design_token("color").each do |prop| %>
.b-swatch--<%= prop.name %>
  background: $<%= prop.name %>
  color: color-contrast($<%= prop.name %>)
<% end %>