// Color Swatches
.b-swatch
  @include display(flex)
  @include align-items(center)
  @include justify-content(center)
  border: 1px solid rgba($asphalt,.15)
  border-radius: $b-border-radius
  height: 100px
  width: 150px

<% data.design_tokens.color.props.each do |prop| %>
.b-swatch--<%= prop[1].name %>
  background: $<%= prop[1].name %>
  color: color-contrast($<%= prop[1].name %>)
<% end %>