// Z-Index Strata
$stratum-bottom:     -1
$stratum-base:        0
$stratum-lowest:     10
$stratum-lower:      50
$stratum-low:       100
$stratum-medium:    200
$stratum-high:      500
$stratum-higher:   1000
$stratum-highest:  5000
$stratum-top:     10000

// Color Palette
<% data.design_tokens.color.props.each do |prop| %>
$<%= prop[1].name %>: <%= prop[1].value %>
<% end %>

// Border
$b-border-radius: 4px !default

// Sizing
$b-space:     rem(20px) !default
$b-space-xs:  $b-space * 0.25 !default
$b-space-s:   $b-space * 0.5 !default
$b-space-l:   $b-space * 2 !default
$b-space-xl:  $b-space * 4 !default

// Typography
/// Font Face
<% data.design_tokens.typography.props.each_with_index do |prop, index| %>
<% next unless prop[1].category == "font-family" %>
$b-<%= prop[1].name %>: <%= prop[1].value %>, sans-serif !default
<% end %>

/// Type Sizing
<% data.design_tokens.typography.props.each_with_index do |prop, index| %>
<% next unless prop[1].category == "font-size" %>
$b-<%= prop[1].name %>: rem(<%= prop[1].value %>)
<% end %>

/// Line Height
<% data.design_tokens.typography.props.each_with_index do |prop, index| %>
<% next unless prop[1].category == "line-height" %>
$b-<%= prop[1].name %>: <%= prop[1].value %>
<% end %>

/// Letter Spacing
<% data.design_tokens.typography.props.each_with_index do |prop, index| %>
<% next unless prop[1].category == "letter-spacing" %>
$b-<%= prop[1].name %>: rem(<%= prop[1].value %>)
<% end %>

/// Headings
<% data.design_tokens.typography.props.each do |prop| %>
<% next unless prop[1].category == "heading" %>
$<%= prop[1].name %>: <%= prop[1].value %>px
<% end %>