body
  +font-feature-settings("kern", "liga", "pnum")
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  font-family: $b-font-family-sans
  font-size: $b-font-size-body-small
  line-height: $b-line-height-default

h1, h2, h3, h4, h5, h6, p
  font-weight: normal
  margin: 0

h1, h2, h3, h4, h5, h6
  font-weight: normal

small
  font-family: $b-font-family-sans
  font-size: $b-font-size-fine-print
  font-weight: $b-font-weight-book
  line-height: $b-line-height-fine-print

// Font Families
<% design_token("typography", category: "font-family").each do |prop| %>
.b-<%= prop.name %>
  font-family: $b-<%= prop.name %>
<% end %>

// Font Weight
<% design_token("typography", category: "font-weight").each do |prop| %>
.b-<%= prop.name %>
  font-weight: $b-<%= prop.name %>
<% end %>

// Headings
<% design_token("typography", category: "heading-size").each_with_index do |prop, index| %>
h<%= index + 1 %>, .h<%= index + 1 %>
  font-size: $b-<%= prop.name %>
<% end %>

// Type Sizing
<% design_token("typography", category: "font-size").each do |prop| %>
.b-<%= prop.name %>
  font-size: $b-<%= prop.name %>
<% end %>

// Letter Spacing
<% design_token("typography", category: "letter-spacing").each do |prop| %>
.b-<%= prop.name %>
  letter-spacing: $b-<%= prop.name %>
<% end %>

// Letter Spacing
<% design_token("typography", category: "line-height").each do |prop| %>
.b-<%= prop.name %>
  line-height: $b-<%= prop.name %>
<% end %>

/// Recipes
// Heading with tagline
h1
  &.has-tagline
    font-family: $b-font-family-serif
    line-height: 1.3

    span
      font-family: $b-font-family-sans

    &:after
      background: $b-color-canary-yellow
      content: ''
      display: block
      height: rem(2)
      margin-top: rem(50)
      width: rem(62)

h2
  &.has-label.has-timestamp
    font-family: $b-font-family-serif
    line-height: $b-line-height-multiline-heading

    span
      &.is-label
        font-family: $b-font-family-sans-small-caps
        font-size: $b-font-size-label
        font-weight: $b-font-weight-book

    time
      font-weight: $b-font-weight-light
      font-style: italic
      font-size: $b-font-size-note

    &:after
      background: $b-color-canary-yellow
      content: ''
      display: block
      height: rem(2)
      margin-top: rem(50)
      width: rem(62)

// Blockquotes
blockquote
  h3
    font-weight: $b-font-weight-light
    line-height: $b-line-height-multiline-heading

    &:before,
    &:after
      display: block
      font-family: $b-font-family-serif
      font-size: rem(72)
      height: rem(20)
      line-height: .675

    &:before
      content: '“'
      margin-bottom: $b-space

    &:after
      content: '”'
      margin-top: $b-space

  .b-quote-name
    font-family: $b-font-family-sans-small-caps
    font-weight: $b-font-weight-book
    letter-spacing: $b-letter-spacing-label

  .b-quote-role
    font-family: $b-font-family-serif
    font-size: $b-font-size-note
    font-style: italic
    font-weight: $b-font-weight-light