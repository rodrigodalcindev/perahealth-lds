.m-card
  background: $b-color-white
  text-decoration: none

  &:after
    content: ''
    position: absolute

  &.is-bio,
  &.is-feature
    &:after
      @include transition(transform .2s ease)
      background: $b-color-canary-yellow
      bottom: 0
      display: inline-block

  &.is-bio,
  &.is-feature
    &:after
      @include transform-origin(left)
      @include transform(scaleX(0))
      height: 2px
      left: 0
      width: 100%

    &:hover
      &:after
        @include transform(scaleX(1))

  &.is-bio,
  &.is-top-headed,
  &.is-left-headed
    .m-card-inner
      @include transition(box-shadow .2s ease)
      box-shadow: rem(0) rem(0) rem(5) 0 rgba($b-color-violet-slate, 0)

    &:hover
      .m-card-inner
        box-shadow: rem(2) rem(2) rem(10) 0 rgba($b-color-violet-slate, 0.1)

  &.is-headless-square,
  &.is-headless-rectangular
    &:hover
      .m-card-overlay
        opacity: 1

  &.is-feature,
  &.is-headless-rectangular,
    .m-card-inner
      padding: $b-card-horizontal-padding

  &.is-bio,
  &.is-feature
    .m-card-image
      background-position: center
      background-repeat: no-repeat
      background-size: auto 140%

  &[class*="is-headless"]
    &:before
      display: none

  &.is-top-headed,
  &.is-left-headed
    &:before
      background: $b-color-light-grey url('../images/graph-background.jpg') no-repeat
      content: ''
      display: block

    &:after
      @include transition(background .2s ease)
      background: rgba($b-color-turquoise, .25)
      display: block
      left: 0
      top: 0

    &:hover
      &:after
        background: rgba($b-color-canary-yellow, .75)

  &.is-top-headed
    &:before
      background-position: left 40% bottom 57%
      height: $b-card-graphic-size
      width: 100%

    &:after
      height: $b-card-graphic-size
      width: 100%

    .m-card-inner
      min-height: $b-card-top-headed-height

  &.is-left-headed
    padding-left: $b-card-graphic-size

    &:before
      background-position: left 30% bottom 85%
      height: 100%
      left: 0
      position: absolute
      top: 0
      width: $b-card-graphic-size

    &:after
      height: 100%
      width: $b-card-graphic-size

    .m-card-inner
      min-height: $b-card-left-headed-height

  &.is-headless-square
    .m-card-inner
      min-height: $b-card-headless-square-height

  &.is-headless-rectangular
    .m-card-inner
      min-height: $b-card-headless-rectangular-height

  &.is-bio
    .m-card-image
      height: $b-card-bio-image-height

    .m-card-inner
      @include justify-content(center)
      min-height: $b-card-bio-height
      padding: 0 $b-card-horizontal-padding

  &.is-feature
    .m-card-image
      height: $b-card-feature-image-height

      &:before
        @include linear-gradient(-50deg, rgba($b-color-turquoise,1) 5%, rgba($b-color-turquoise,0) 55%)
        background-color: transparent
        content: ''
        display: block
        height: 100%
        left: 0
        opacity: .4
        position: absolute
        top: 0
        width: 100%

    .m-card-inner
      min-height: $b-card-feature-height

  .m-card-badge,
  .m-card-inner,
  .m-card-overlay
    @include display(flex)
    @include flex-direction(column)

  .m-card-inner
    @include justify-content(space-between)
    padding: $b-card-vertical-padding $b-card-horizontal-padding $b-card-horizontal-padding

    h3, h4
      font-weight: $b-font-weight-light

    h5
      font-weight: $b-font-weight-book

    h3, h4, h5
      color: $b-color-violet-slate
      line-height: $b-line-height-multiline-heading

      time
        font-family: $b-font-family-serif
        font-weight: $b-font-weight-light
        font-style: italic
        font-size: $b-font-size-note
        /* To be refactored into spacing design token updates */
        margin-bottom: rem(30)

    .m-card-category
      font-family: $b-font-family-sans-small-caps
      font-size: $b-font-size-label
      font-weight: $b-font-weight-book

    .m-card-role
      font-family: $b-font-family-sans
      font-size: $b-font-size-body-small
      font-weight: $b-font-weight-book

  .m-card-overlay
    @include transition(opacity .2s ease)
    @include justify-content(space-between)
    background: rgba($b-color-turquoise, .95)
    color: $b-color-white
    font-size: $b-font-size-body-small
    font-weight: $b-font-weight-book
    height: 100%
    left: 0
    opacity: 0
    overflow: hidden
    padding: $b-card-overlay-padding $b-card-horizontal-padding
    top: 0
    width: 100%

    .m-cta
      color: $b-color-white

  .m-card-badge
    @include align-items(center)
    @include justify-content(center)
    border: rem(1) solid
    border-radius: 50%
    color: $b-color-blue
    font-family: $b-font-family-sans-small-caps
    font-size: $b-font-size-navigation-description
    font-weight: $b-font-weight-medium
    height: rem(45)
    letter-spacing: $b-letter-spacing-cta-anchor
    right: $b-space-l
    top: $b-space-l
    width: rem(45)